{
  "name": "autocherry",
  "displayName": "AutoCherry",
  "publisher": "jayveer-sodha",
  "description": "AutoCherry lets you quickly cherry-pick one or more commits across branches without touching the command line. Simple, fast, and built right into VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onUri"
  ],
  "main": "extension/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "autocherry",
          "title": "AutoCherry",
          "icon": "extension/assets/cherry.png"
        }
      ]
    },
    "views": {
      "autocherry": [
        {
          "type": "webview",
          "id": "autoCherryView",
          "name": " ðŸš€ Smart Cherry-Picker",
          "icon": "extension/public/cherry.png"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "build": "vite build --config webview/vite.config.js",
    "dev": "nodemon --watch webview --ext js,jsx,ts,tsx,css --ignore webview/dist --exec \"npm run build\""
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "nodemon": "^3.1.10",
    "vite": "^7.0.0"
  }
}
